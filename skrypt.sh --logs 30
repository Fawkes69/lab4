#!/bin/bash
if [ "$1" != "--logs" ]; then
    echo "UÅ¼ycie: skrypt.sh --logs [liczba]"
    exit 1
fi
if [ -z "$2" ]; then
    num_logs=100
else
    num_logs=$2
fi
for ((i=1; i<=$num_logs; i++)); do
    filename="log$i.txt"
    echo "Nazwa pliku: $filename" > "$filename"
    echo "Nazwa skryptu: $0" >> "$filename"
    echo "Data: $(date)" >> "$filename"
done
